//十进制转二进制
# include <stdio.h>
//数据类型声明，数组元素赋初值均为零
main ()
{
	int i, j, n, m;   //定义变量i,j,n,m
	int a[16] =
	{
		0
	};					//定义数组a 元素初始值为0

	printf("请输入0~32767以内的十进制数： \n");
	scanf("%d",&n);			//输入n的值

//用第一个for循环来实现十进制到二进制的转换，并输出结果
	for(m = 0; m< 15; m ++)	//for循环从0~14，最高位位符号位，本例始终为0
	{
		i = n % 2;			//取2的余数
		j = n / 2;			//取被2整除的结果
		n = j;				
		a[m] = i;			//讲余数的每次的余数存入数组a中
	}

//第二个for循环中，利用if语句是输出结果更加直观
	for ( m > 15; m >= 0 ; m--)		//for循环将数组中16个元素从后往前输出
	{
		printf("%d",a[m]);
		if(m % 4 == 0)	
			printf("  ");
	}

}
